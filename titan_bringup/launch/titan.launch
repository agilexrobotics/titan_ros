<?xml version='1.0'?>
<launch>

    <arg name="port_name" default="can0"/>
    <arg name="robot_model" default="titan"/>
    <arg name="odom_frame" default="odom"/>
    <arg name="base_frame" default="base_link" />
    <arg name="update_rate" default="50" />
    <arg name="odom_topic_name" default="odom" />
    <arg name="publish_odom_tf" default="false" />

    <include file="$(find titan_base)/launch/titan_robot_base.launch">
        <arg name="port_name" value="$(arg port_name)"/>
        <arg name="robot_model" value="$(arg robot_model)"/>
        <arg name="odom_frame" value="$(arg odom_frame)"/>
        <arg name="base_frame" value="$(arg base_frame)" />
        <arg name="update_rate" value="$(arg update_rate)" />
        <arg name="odom_topic_name" value="$(arg odom_topic_name)" />
        <arg name="publish_odom_tf" value="$(arg publish_odom_tf)" />
    </include>
</launch>
